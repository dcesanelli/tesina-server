datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstname String
  lastname  String
  dob       DateTime
  verified  Boolean
  role      Role     @default(USER)
  Photo     Photo[]
}

model Photo {
  id          String @id @default(uuid())
  title       String
  imageUri    String
  address     String
  locationLat Float
  locationLng Float
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}

enum Role {
  USER
  PROFESSOR
  ADMIN
}
